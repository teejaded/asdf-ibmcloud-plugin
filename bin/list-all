#!/usr/bin/env bash

# detect the tool name
readonly __dirname="$(cd -P "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
readonly toolname="$(basename "$(dirname "${__dirname}")" | sed "s/^ic\\-//")"
printenv >&2
which jq >&2

cmd="curl -s https://plugins.cloud.ibm.com/plugins | $(which jq) -r '.plugins[] | select(.name == \"$toolname\") | .versions[] | .version' | tr '\\n' ' '"
eval "$cmd"
